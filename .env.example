# ==============================
# Feishu websocket -> nullclaw bridge
# ==============================

# Feishu/Lark app credentials (required)
FEISHU_APP_ID=cli_xxxxxxxxxxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Must match channels.lark.accounts.<id>.verification_token in nullclaw config
FEISHU_VERIFICATION_TOKEN=xxxxxxxxxxxxxxxx

# Optional: set only if your Feishu event subscription is encrypted
FEISHU_ENCRYPT_KEY=

# false = open.feishu.cn (CN), true = open.larksuite.com (global)
FEISHU_USE_LARKSUITE=false

# nullclaw webhook endpoint for Lark events
NULLCLAW_LARK_WEBHOOK_URL=http://127.0.0.1:3000/lark
NULLCLAW_REQUEST_TIMEOUT_SECS=10

# debug | info | warn | error
BRIDGE_LOG_LEVEL=info

# ==============================
# nullclaw Lark config checklist
# ==============================
# 1) channels.lark.accounts.<id>.app_id           == FEISHU_APP_ID
# 2) channels.lark.accounts.<id>.app_secret       == FEISHU_APP_SECRET
# 3) channels.lark.accounts.<id>.verification_token == FEISHU_VERIFICATION_TOKEN
# 4) channels.lark.accounts.<id>.receive_mode     == "webhook"
# 5) channels.lark.accounts.<id>.use_feishu       == !FEISHU_USE_LARKSUITE
